<h1 class="text-center">Try all the burgers you would like!</h1>
<hr>
<br>

<div class="row">
  <div class="col-4 text-right">
    <h2>Fresh burgers!</h2>

    <div>
      {{#each burgers}}
      {{#unless devoured}}
      {{burger_name}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </div>
  </div>

  <div class="col-4 text-center">
    <img class=" burgImg" src="assets/img/burger.jpg" alt="Burger Clipart">
  </div>

  <div class="col-4 text-left">
    <h2>Burgers you have eaten!</h2>

    <div>
      {{#each burgers}}
      {{#if devoured}}
      {{burger_name}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </div>
  </div>
</div>

<div class="text-center">
  <h2>Add a burger!</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="bn">Burger name:</label>
      <input type="text" id="bn" name="name">
    </div>

    <div class="form-group">
      <label for="devoured">Devoured?</label><br>
      <input type="radio" name="devoured" value="1" checked> Devoured<br>
      <input type="radio" name="devoured" value="0"> Not devoured
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>